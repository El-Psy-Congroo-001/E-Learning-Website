<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Content</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>   
    <link rel="stylesheet" href="./style.css">
    <link rel="icon" href="./pic/icon.ico">
    
</head>
<body class="bg-dark">
<%- include("techeader_auth.ejs") %>
<div class="container">
    <%let i=0;%>
    <%if(!data[0]){%>
        <h1 class="text-muted">No Courses</h1>
        <a href="/courseUpload" class="btn-manual">Add Course</a>
        <%}else{%>
            <table class="table text-bg-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Stream</th>
                    <th scope="col">Availability</th>
                    <th scope="col">Edit</th>
                  </tr>
                </thead>
        <%while(data[i]){%>
                <tbody>
                  <tr>
                    <th scope="row"><%=data[i].courseID%></th>
                    <td><%= data[i].courseName %></td>
                    <td><%= data[i].courseStream %></td>
                    <% if(data[i].validity=="yes"){%>
                        <td class="text-success"><%= data[i].validity %></td>
                        <%}else{%>
                    <td class="text-danger"><%= data[i].validity %></td>
                    <%}%>
                    <td>
                        <form method="post">
                            <input value="<%=data[i].courseID%>" type="hidden" name="courseID">
                            <button type="submit" class="btn btn-manual">Add Chapter</button>
                        </form>
                    </td>
                  </tr>
                </tbody>
              </table>
        <%i+=1;}%>
        <div class="py-3">
          <a href="/courseUpload" class="btn-manual">Add More Course</a>
        </div>
        <% } %>
</div>
      
</body>

<%- include("tecfooter.ejs") %>

</html>